<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_id"
        android:textColor="@color/theme_lite"
        android:textSize="@dimen/list_text_size"
        android:visibility="gone" >
    </TextView>

    <TextView
        android:id="@+id/ThingId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_id"
        android:textColor="@color/theme_lite"
        android:textSize="@dimen/list_text_size"
        android:visibility="gone" >
    </TextView>

    <TextView
        android:id="@+id/AttentionDateId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_id"
        android:textColor="@color/theme_lite"
        android:textSize="@dimen/label_text_size"
        android:visibility="gone" >
    </TextView>

    <Spinner
        android:id="@+id/AttentionDateSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </Spinner>

    <TextView
        android:id="@+id/AttentionDateValueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/AttentionDateValue"
        android:text="@string/dialog_save_thing_property_property_value_label"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/AttentionDateValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        tools:ignore="TextFields" >
    </EditText>

    <LinearLayout
        android:id="@+id/Buttons"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/SaveBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_save_btn" />

        <Button
            android:id="@+id/RemoveBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_remove_btn" />

        <Button
            android:id="@+id/BackBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_back_btn" />
    </LinearLayout>

</LinearLayout>