<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/activity_background"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="${relativePackage}.${activityClass}"  android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/SearchContainer"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/spacer"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical"
        tools:ignore="UselessParent" >
        
        <TextView
	        android:id="@+id/SearchTextHeader"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/header_search_resource"
	        android:padding="@dimen/spacer"
	        android:labelFor="@+id/ResourceTypeSpinner"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="@color/theme_lite" />

        <Spinner
            android:id="@+id/ResourceTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/layout_background"
            android:popupBackground="@color/layout_background_blacker"
            android:textColor="@color/theme_lite" />
        
        <Spinner
				android:id="@+id/ResourceListSpinner"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="@color/theme_lite"
				android:background="@color/layout_background"
				android:popupBackground="@color/layout_background_blacker" />

	</LinearLayout>
        
    <LinearLayout
        android:id="@+id/FoundContainer"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/spacer"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical"
        tools:ignore="UselessParent,NestedWeights">
            
       <TextView
	        android:id="@+id/FoundItemListHeader"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/header_found_list"
	        android:padding="@dimen/spacer"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="@color/theme_lite" />
       
       <ListView
	        android:id="@+id/ItemListView"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/layout_background"
	        android:padding="@dimen/layout_padding" />
        
	</LinearLayout>

</LinearLayout>